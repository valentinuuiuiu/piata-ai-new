{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["fra1"],
  "crons": [
    {
      "path": "/api/cron/blog-daily",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/check-agents",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/auto-repost",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/shopping-agents-runner",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/marketing-email-campaign",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/social-media-generator",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 9 * * 1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://piata-ai.vercel.app"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=60, stale-while-revalidate=30"
        }
      ]
    }
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/anunturi/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}
